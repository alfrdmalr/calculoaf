{
  "compilerOptions": {
    "jsx": "react",
    "module": "ESnext",
    "target": "ES6",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "lib": [
    "dom",
    "dom.iterable",
    "esnext"
  ],
  "include": ["src"]
}
